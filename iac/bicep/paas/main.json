{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "15114121587461678362"
    }
  },
  "parameters": {
    "environment": {
      "type": "string",
      "metadata": {
        "description": "Environment name (dev, staging, prod)"
      }
    },
    "applicationName": {
      "type": "string",
      "defaultValue": "jobsite",
      "metadata": {
        "description": "Application name (no spaces)"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure location for resources"
      }
    },
    "appServiceSku": {
      "type": "string",
      "defaultValue": "S1",
      "metadata": {
        "description": "App Service Plan SKU (B1, B2, S1, S2, P1V2, etc.)"
      }
    },
    "sqlDatabaseEdition": {
      "type": "string",
      "defaultValue": "Standard",
      "metadata": {
        "description": "SQL Database edition (Standard, Premium)"
      }
    },
    "sqlServiceObjective": {
      "type": "string",
      "defaultValue": "S1",
      "metadata": {
        "description": "SQL Database service objective (S0, S1, S2, S3, etc.)"
      }
    },
    "sqlAdminUsername": {
      "type": "string",
      "metadata": {
        "description": "Administrator username for SQL Server"
      }
    },
    "sqlAdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Administrator password for SQL Server"
      }
    },
    "peSubnetId": {
      "type": "string",
      "metadata": {
        "description": "Private Endpoint Subnet ID from core module"
      }
    },
    "keyVaultName": {
      "type": "string",
      "metadata": {
        "description": "Key Vault Name from core module"
      }
    },
    "logAnalyticsWorkspaceId": {
      "type": "string",
      "metadata": {
        "description": "Log Analytics Workspace ID from core module"
      }
    },
    "privateDnsZoneName": {
      "type": "string",
      "defaultValue": "jobsite.internal",
      "metadata": {
        "description": "Private DNS Zone Name from core module"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {
        "environment": "[parameters('environment')]",
        "application": "[parameters('applicationName')]",
        "deployedDate": "[utcNow('u')]",
        "deployedBy": "Bicep",
        "component": "paas"
      },
      "metadata": {
        "description": "Tags to apply to all resources"
      }
    }
  },
  "variables": {
    "uniqueSuffix": "[uniqueString(resourceGroup().id)]",
    "appServiceName": "[format('{0}-app-{1}-{2}', parameters('applicationName'), parameters('environment'), variables('uniqueSuffix'))]",
    "appServicePlanName": "[format('{0}-asp-{1}', parameters('applicationName'), parameters('environment'))]",
    "sqlServerName": "[format('{0}-sql-{1}-{2}', parameters('applicationName'), parameters('environment'), variables('uniqueSuffix'))]",
    "sqlDatabaseName": "[format('{0}db', parameters('applicationName'))]",
    "appInsightsName": "[format('{0}-ai-{1}', parameters('applicationName'), parameters('environment'))]",
    "privateEndpointName": "[format('{0}-pe', variables('appServiceName'))]",
    "privateEndpointNicName": "[format('{0}-nic', variables('privateEndpointName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2021-11-01",
      "name": "[variables('sqlServerName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "administratorLogin": "[parameters('sqlAdminUsername')]",
        "administratorLoginPassword": "[parameters('sqlAdminPassword')]",
        "version": "12.0",
        "minimalTlsVersion": "1.2",
        "publicNetworkAccess": "Enabled"
      }
    },
    {
      "type": "Microsoft.Sql/servers/firewallRules",
      "apiVersion": "2021-11-01",
      "name": "[format('{0}/{1}', variables('sqlServerName'), 'AllowAzureServices')]",
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "0.0.0.0"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ]
    },
    {
      "type": "Microsoft.Sql/servers/firewallRules",
      "apiVersion": "2021-11-01",
      "name": "[format('{0}/{1}', variables('sqlServerName'), 'AllowLocalDevelopment')]",
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "255.255.255.255"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ]
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2021-11-01",
      "name": "[format('{0}/{1}', variables('sqlServerName'), variables('sqlDatabaseName'))]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "[parameters('sqlServiceObjective')]",
        "tier": "[parameters('sqlDatabaseEdition')]"
      },
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": 268435456000
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ]
    },
    {
      "type": "Microsoft.Sql/servers/databases/backupLongTermRetentionPolicies",
      "apiVersion": "2021-11-01",
      "name": "[format('{0}/{1}/{2}', variables('sqlServerName'), variables('sqlDatabaseName'), 'default')]",
      "properties": {
        "weeklyRetention": "P4W",
        "monthlyRetention": "P12M",
        "yearlyRetention": "P0Y",
        "weekOfYear": 1
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers/databases', variables('sqlServerName'), variables('sqlDatabaseName'))]"
      ]
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[variables('appInsightsName')]",
      "location": "[parameters('location')]",
      "kind": "web",
      "tags": "[parameters('tags')]",
      "properties": {
        "Application_Type": "web",
        "WorkspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', split(parameters('logAnalyticsWorkspaceId'), '/')[8])]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[format('{0}/{1}', parameters('keyVaultName'), 'paas-sql-connection-string')]",
      "properties": {
        "value": "[format('Server=tcp:{0},1433;Initial Catalog={1};Persist Security Info=False;User ID={2};Password={3};MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;', reference(resourceId('Microsoft.Sql/servers', variables('sqlServerName')), '2021-11-01').fullyQualifiedDomainName, variables('sqlDatabaseName'), parameters('sqlAdminUsername'), parameters('sqlAdminPassword'))]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers/databases', variables('sqlServerName'), variables('sqlDatabaseName'))]",
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ]
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[format('{0}/{1}', parameters('keyVaultName'), 'paas-appinsights-key')]",
      "properties": {
        "value": "[reference(resourceId('Microsoft.Insights/components', variables('appInsightsName')), '2020-02-02').InstrumentationKey]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Insights/components', variables('appInsightsName'))]"
      ]
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-03-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "[parameters('appServiceSku')]",
        "capacity": "[if(equals(parameters('environment'), 'prod'), 2, 1)]"
      },
      "kind": "Windows",
      "properties": {
        "reserved": false
      }
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2018-11-30",
      "name": "[format('{0}-identity-{1}', parameters('applicationName'), parameters('environment'))]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-03-01",
      "name": "[variables('appServiceName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[format('{0}', resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('{0}-identity-{1}', parameters('applicationName'), parameters('environment'))))]": {}
        }
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "httpsOnly": true,
        "clientAffinityEnabled": true,
        "hostingEnvironmentProfile": null
      },
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('{0}-identity-{1}', parameters('applicationName'), parameters('environment')))]",
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
      ]
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2021-03-01",
      "name": "[format('{0}/{1}', variables('appServiceName'), 'web')]",
      "properties": {
        "numberOfWorkers": 1,
        "defaultDocuments": [
          "Default.aspx",
          "index.html"
        ],
        "netFrameworkVersion": "v4.0",
        "managedPipelineMode": "Integrated",
        "webSocketsEnabled": false,
        "minTlsVersion": "1.2",
        "scmMinTlsVersion": "1.2",
        "http20Enabled": true,
        "remoteDebuggingEnabled": false,
        "detailedErrorLoggingEnabled": "[not(equals(parameters('environment'), 'prod'))]",
        "publishingUsername": "[variables('appServiceName')]",
        "scmType": "None",
        "use32BitWorkerProcess": false,
        "alwaysOn": "[equals(parameters('environment'), 'prod')]",
        "connectionStrings": [
          {
            "name": "connectionstring",
            "connectionString": "[reference(resourceId('Microsoft.KeyVault/vaults/secrets', parameters('keyVaultName'), 'paas-sql-connection-string'), '2023-07-01').value]",
            "type": "SQLAzure"
          }
        ],
        "appSettings": [
          {
            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
            "value": "[reference(resourceId('Microsoft.KeyVault/vaults/secrets', parameters('keyVaultName'), 'paas-appinsights-key'), '2023-07-01').value]"
          },
          {
            "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
            "value": "[format('InstrumentationKey={0}', reference(resourceId('Microsoft.Insights/components', variables('appInsightsName')), '2020-02-02').InstrumentationKey)]"
          },
          {
            "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
            "value": "~3"
          },
          {
            "name": "XDT_MicrosoftApplicationInsights_Mode",
            "value": "recommended"
          },
          {
            "name": "WEBSITE_RUN_FROM_PACKAGE",
            "value": "0"
          },
          {
            "name": "WEBSITE_HTTPLOGGING_RETENTION_DAYS",
            "value": "7"
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Insights/components', variables('appInsightsName'))]",
        "[resourceId('Microsoft.Web/sites', variables('appServiceName'))]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', parameters('keyVaultName'), 'paas-appinsights-key')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', parameters('keyVaultName'), 'paas-sql-connection-string')]"
      ]
    },
    {
      "type": "Microsoft.Insights/diagnosticSettings",
      "apiVersion": "2021-05-01-preview",
      "scope": "[format('Microsoft.Web/sites/{0}', variables('appServiceName'))]",
      "name": "[format('{0}-diagnostics', variables('appServiceName'))]",
      "properties": {
        "workspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces', split(parameters('logAnalyticsWorkspaceId'), '/')[8])]",
        "logs": [
          {
            "category": "AppServiceHTTPLogs",
            "enabled": true,
            "retentionPolicy": {
              "enabled": true,
              "days": 7
            }
          },
          {
            "category": "AppServiceConsoleLogs",
            "enabled": true,
            "retentionPolicy": {
              "enabled": true,
              "days": 7
            }
          },
          {
            "category": "AppServiceApplicationLogs",
            "enabled": true,
            "retentionPolicy": {
              "enabled": true,
              "days": 7
            }
          }
        ],
        "metrics": [
          {
            "category": "AllMetrics",
            "enabled": true,
            "retentionPolicy": {
              "enabled": true,
              "days": 7
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('appServiceName'))]"
      ]
    },
    {
      "type": "Microsoft.Insights/diagnosticSettings",
      "apiVersion": "2021-05-01-preview",
      "scope": "[format('Microsoft.Sql/servers/{0}/databases/{1}', variables('sqlServerName'), variables('sqlDatabaseName'))]",
      "name": "[format('{0}-diagnostics', variables('sqlDatabaseName'))]",
      "properties": {
        "workspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces', split(parameters('logAnalyticsWorkspaceId'), '/')[8])]",
        "logs": [
          {
            "category": "SQLInsights",
            "enabled": true,
            "retentionPolicy": {
              "enabled": true,
              "days": 7
            }
          },
          {
            "category": "AutomaticTuning",
            "enabled": true,
            "retentionPolicy": {
              "enabled": true,
              "days": 7
            }
          },
          {
            "category": "QueryStoreRuntimeStatistics",
            "enabled": true,
            "retentionPolicy": {
              "enabled": true,
              "days": 7
            }
          }
        ],
        "metrics": [
          {
            "category": "Basic",
            "enabled": true,
            "retentionPolicy": {
              "enabled": true,
              "days": 7
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers/databases', variables('sqlServerName'), variables('sqlDatabaseName'))]"
      ]
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2023-04-01",
      "name": "[variables('privateEndpointNicName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[parameters('peSubnetId')]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "primary": true,
              "privateIPAddressVersion": "IPv4"
            }
          }
        ],
        "networkSecurityGroup": null,
        "enableIPForwarding": false,
        "enableAcceleratedNetworking": false
      }
    },
    {
      "type": "Microsoft.Network/privateEndpoints",
      "apiVersion": "2023-04-01",
      "name": "[variables('privateEndpointName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
        "subnet": {
          "id": "[parameters('peSubnetId')]"
        },
        "privateLinkServiceConnections": [
          {
            "name": "[format('{0}-connection', variables('appServiceName'))]",
            "properties": {
              "privateLinkServiceId": "[resourceId('Microsoft.Web/sites', variables('appServiceName'))]",
              "groupIds": [
                "sites"
              ]
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('appServiceName'))]"
      ]
    },
    {
      "type": "Microsoft.Network/privateDnsZones/A",
      "apiVersion": "2020-06-01",
      "name": "[format('{0}/{1}', parameters('privateDnsZoneName'), 'app')]",
      "properties": {
        "ttl": 3600,
        "aRecords": [
          {
            "ipv4Address": "[reference(resourceId('Microsoft.Network/privateEndpoints', variables('privateEndpointName')), '2023-04-01').customDnsConfigs[0].ipAddresses[0]]"
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/privateEndpoints', variables('privateEndpointName'))]"
      ]
    }
  ],
  "outputs": {
    "appServiceUrl": {
      "type": "string",
      "metadata": {
        "description": "App Service URL"
      },
      "value": "[format('https://{0}', reference(resourceId('Microsoft.Web/sites', variables('appServiceName')), '2021-03-01').defaultHostName)]"
    },
    "appServiceName": {
      "type": "string",
      "metadata": {
        "description": "App Service Name"
      },
      "value": "[variables('appServiceName')]"
    },
    "appServicePrivateIp": {
      "type": "string",
      "metadata": {
        "description": "App Service Private Endpoint IP"
      },
      "value": "[reference(resourceId('Microsoft.Network/privateEndpoints', variables('privateEndpointName')), '2023-04-01').customDnsConfigs[0].ipAddresses[0]]"
    },
    "sqlServerName": {
      "type": "string",
      "metadata": {
        "description": "SQL Server Name"
      },
      "value": "[variables('sqlServerName')]"
    },
    "sqlServerFqdn": {
      "type": "string",
      "metadata": {
        "description": "SQL Server FQDN"
      },
      "value": "[reference(resourceId('Microsoft.Sql/servers', variables('sqlServerName')), '2021-11-01').fullyQualifiedDomainName]"
    },
    "sqlDatabaseName": {
      "type": "string",
      "metadata": {
        "description": "SQL Database Name"
      },
      "value": "[variables('sqlDatabaseName')]"
    },
    "appInsightsName": {
      "type": "string",
      "metadata": {
        "description": "Application Insights Name"
      },
      "value": "[variables('appInsightsName')]"
    },
    "appInsightsKey": {
      "type": "string",
      "metadata": {
        "description": "Application Insights Instrumentation Key"
      },
      "value": "[reference(resourceId('Microsoft.Insights/components', variables('appInsightsName')), '2020-02-02').InstrumentationKey]"
    },
    "sqlConnectionString": {
      "type": "string",
      "metadata": {
        "description": "SQL Connection String"
      },
      "value": "[reference(resourceId('Microsoft.KeyVault/vaults/secrets', parameters('keyVaultName'), 'paas-sql-connection-string'), '2023-07-01').value]"
    },
    "resourceGroupName": {
      "type": "string",
      "metadata": {
        "description": "Resource Group Name"
      },
      "value": "[resourceGroup().name]"
    },
    "deploymentLocation": {
      "type": "string",
      "metadata": {
        "description": "Deployment Location"
      },
      "value": "[parameters('location')]"
    }
  }
}